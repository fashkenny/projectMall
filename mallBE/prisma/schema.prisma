// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model authModel {
  id String @id @default(uuid())

  userName String
  email    String @unique
  password String

  verified Boolean @default(false)
  token    String?

  avatar   String?
  avatarID String? @unique

  role   String
  roleID String? @unique

  createdAt DateTime @default(now())

  store productModel[]
}

model dispatcherModel {
  id String @id @default(uuid())

  userName String
  email    String @unique
  password String

  verified Boolean @default(false)
  token    String?

  avatar String?

  role   String
  roleID String? @unique

  createdAt DateTime @default(now())

product String
  productID String? @unique
}

model productModel {
  id String @id @default(uuid())

  title       String
  cost        Int
  description String
  category    String

  image   String
  imageID String?

  brand String

  createdAt DateTime @default(now())

  condition String

  price Int

  user   authModel @relation(fields: [userID], references: [id])
  userID String
}
